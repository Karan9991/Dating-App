<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_20sdp"
    tools:context=".ui.Activity.LoginActivity">


        <!-- Login form fields here -->

        <!-- Bubble at the bottom right -->



    <TextView

        android:fontFamily="@font/leckerlione_regular"
        android:id="@+id/textViewLoginTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_marginBottom="@dimen/_30sdp"
        android:text="Login"
        android:textAlignment="center"
        android:textColor="@color/colorPink"
        android:textSize="@dimen/_35sdp"
        android:textStyle="bold" />


    <EditText
        android:fontFamily="@font/leckerlione_regular"
        android:id="@+id/loginEmailText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edittext_capsule"
        android:gravity="start"
        android:hint="@string/email"
        android:textColorHint="@color/colorOrange"
        android:inputType="textEmailAddress"
        android:padding="@dimen/_15ssp"
        android:textColor="@color/colorPink"
        android:textStyle="bold" />

    <EditText
        android:fontFamily="@font/leckerlione_regular"
        android:id="@+id/loginPassText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:textColorHint="@color/colorOrange"
        android:background="@drawable/edittext_capsule"
        android:gravity="start"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:padding="@dimen/_15ssp"
        android:textColor="@color/colorPink"
        android:textStyle="bold" />

    <Button
        android:fontFamily="@font/leckerlione_regular"
        android:id="@+id/btnLoginPageLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/button_capsule"
        android:backgroundTint="@color/colorPink"
        android:gravity="center"
        android:textAllCaps="false"
        android:text="@string/login"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_20sdp" />

    <Button
        android:fontFamily="@font/leckerlione_regular"
        android:id="@+id/btnLoginPageRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_40sdp"
        android:background="@drawable/button_capsule"
        android:backgroundTint="@color/colorOrangeLight"
        android:gravity="center"
        android:textAllCaps="false"
        android:text="@string/register"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_20sdp" />




</LinearLayout>


